<div class="col-md-4"></div>	
<div class="col-md-4">
	<div class="row">
	<h2 class="span1"><p class="title">Forgot your password?</p></h2>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>
				<div class="span2"
				  <div class="field">
				    <p><%= f.email_field :email,placeholder:"Email", autofocus: true, class:"form-control input-lg" %></p>
				  </div>

				  <div class="actions">
				    <%= f.submit "Send me reset password instructions", class:"btn btn-lg btn-primary btn-block" %>
				  </div>
				 </div>
		<% end %>
		<div class="span3">
		<%= render "devise/shared/links" %>
		</div>
	</div>
</div> 