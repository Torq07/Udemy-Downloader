<div class="container">
  <div class="row">
      <div class="col-md-4"></div> 
      <div class="col-md-4"> 
        <h2 class="title">AUTORIZATION PAGE</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.email_field :email,:placeholder => "Email", autofocus: true, class:"form-control" %>
            <%= f.password_field :password,:placeholder => "Password",autocomplete: "off", class:"form-control",style:"margin:10px 0 0" %>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class:"remember-me" %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Sign in",class:"btn btn-lg btn-primary btn-block"%>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div> 
    </div>
  </div>  
</div>