<div class="row"> 
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="span1">
      <h2 class="title">Sign up</h2>
    </div>
    <div class="span2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <p><%= f.email_field :email,placeholder:"Email", autofocus: true, class:"form-control"%></p>
        </div>

        <div class="field">
          <p><% if @minimum_password_length %>
          <%= f.password_field :password,placeholder:"Password. Minimum #{@minimum_password_length} characters ", autocomplete: "off", class:"form-control" %>
          <% end %></p>
        </div>

        <div class="field">
          <p><%= f.password_field :password_confirmation,placeholder:"Password confirmation", autocomplete: "off", class:"form-control" %></p>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-md btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="span3">
      <%= render "devise/shared/links" %>
    </div> 
  </div> 
</div>