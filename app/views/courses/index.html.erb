<div class="container">

  <div class='row'>
    <div class="col-md-6 col-md-offset-4">
      <h1>Listing of Your Courses</h1>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.url %></td>
          <td>
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            <%= link_to 'Show', course %>
          </td>
          <td>
            <span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span>
            <%= link_to 'Remove', course, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
  <%= link_to 'Add New Course', new_course_path , class:"btn btn-lg btn-success"%>
</div>  
